{
    "compileOnSave": true,
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "preserveConstEnums": false,
        "allowUnreachableCode": false,
        "removeComments": false,
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "moduleResolution": "node",
        "baseUrl": "./"
    },
    "include": [
        "./src/**/*",
        "./webpack/declarations.d.ts"
    ]
}
